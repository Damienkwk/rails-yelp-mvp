<div class="container mt-5">
  <h1><%= @restaurant.name %></h1>
  <p><%= @restaurant.address %></p>
  <p><%= @restaurant.phone_number %></p>
  <p><%= @restaurant.category %></p>
  <%= link_to "back to restaurants", restaurants_path, class: "btn btn-primary my-2" %>
  <%= link_to "add new review", new_restaurant_review_path(@restaurant), class: "btn btn-primary my-2" %>
  <hr>
  <p><strong>Reviews</strong></p>
  <ul class="list-group">
    <% @restaurant.reviews.each do |review| %>
      <div style="display: inline-block;">
        <% "#{review.rating}".to_i.times do %>
          <i class="fa fa-star" aria-hidden="true" style="color:gold;"></i>
        <% end %>
      </div>
      <li class="list-group-item my-2"><%= review.content %></li>
    <% end %>
  </ul>
  <br>
</div>
